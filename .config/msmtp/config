defaults
auth           plain
tls            on
tls_starttls   off
tls_trust_file /etc/ssl/cert.pem

account        fastmail
host           smtp.fastmail.com
port           465
from           svmhdvn@fastmail.com
user           svmhdvn@fastmail.com
passwordeval   "cat $HOME/.password-store/secret/fastmail-smtp.txt"

# Set a default account
account default : fastmail
